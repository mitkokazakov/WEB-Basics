<h1 class="text-center mt-2">All Cards</h1>
<div class="row mt-2 mb-4">
    @foreach (var c in Model)
    {
    <div class="card col-6 col-lg-3 game-card">
        <img src="@c.ImageUrl"
             class="card-img-top img-fluid card-image">
        <div class="card-body">
            <h5 class="card-title text-center" data-toggle="tooltip" data-placement="bottom"
                title="Description:<br>@c.Description">
                @c.Name
            </h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-center">@c.Keyword</li>
                <li class="list-group-item">
                    <span class="attack-stat">@c.Attack</span><span class="health-stat">@c.Health</span>
                </li>
            </ul>
            <a href="/Cards/AddToCollection?cardId=X" class="btn btn-block btn-primary">Add to Collection</a>
        </div>
    </div>
    }
</div>